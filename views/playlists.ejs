<%- include('partials/header.ejs', {
  title: 'TI - Kampanie',
  styles: []
}) %>

<h1 class="title is-1">Playlisty</h1>

<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    
  </div>
  <!-- Right side -->
  <div class="level-right">
    <div class="level-item">
      <button class="func-add-playlist button is-primary">Dodaj nową playlistę</button>
    </div>
  </div>
</nav>

<% playlists.forEach(function (playlist) { %>
<div class="box">
  <div class="level" data-playlist-name="<%= playlist.name %>">
    <!-- Left side -->
    <div class="level-left">
      <div class="level-item">
        <h1 class="title"><%= playlist.name %></h1>
      </div>
    </div>
    <div class="level-right">
      <div class="level-item">
        <a class="button" href="/edit-playlist/<%= playlist.name %>">Edytuj playlistę</a>
      </div>
    </div>
  </div>

  <% if (playlist.items.length) { %>
    <b>Elementów: <%=playlist.items.length%></b>
  <% } else { %>
    <b>Brak elementów.</b>
  <% } %>
</div>

<% }) %>

<div class="campaigns-view"></div>

<%- include('partials/footer', {
  scripts: [
    '/public/js/playlists.js'
  ]
}) %>